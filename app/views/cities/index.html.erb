<p id="notice"><%= notice %></p>

<h1>Listing Cities</h1>

<table border=1>
  <thead>
    <tr>
      <th>City</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= (city.name + ", " + city.state.name + ", " + city.state.country.name)%></td>
        <td><%= city.latitude%></td>
        <td><%= city.longitude%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path %>
